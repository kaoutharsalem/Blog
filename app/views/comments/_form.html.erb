<div class="flex mt-16 justify-center items-center text-center w-full h-[50vh]">
  <div class="">
    <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <div>
        <label id="comment-label" class="block text-sm font-medium leading-6 text-gray-900">Commenter</label>
        <div class="relative mt-2">
          <%= form.text_field :commenter, class: 'bg-gray-50 appearance-none border-2 border-gray-200 rounded w-full py-1.5 pl-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-50', placeholder: 'Your name' %>
        </div>
      </div>
      <div>
        <label id="body-label" class="block text-sm font-medium leading-6 text-gray-900">Body</label>
        <div class="relative mt-2">
          <%= form.text_area :body, class: 'bg-gray-50 appearance-none border-2 border-gray-200 rounded w-full py-1.5 pl-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-gray-50', rows: 5, placeholder: 'Your comment here' %>
        </div>
      </div>
      <% if @article.respond_to? :status %>
        <div>
          <label id="status-label" class="block text-sm font-medium leading-6 text-gray-700">Status</label>
          <div class="relative mt-2">
            <%= form.select :status, Visible::VALID_STATUSES, selected: @article.status || 'public', class: 'bg-gray-50 appearance-none border-2 border-gray-200 rounded w-full py-1.5 pl-3 pr-10 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500' %>
          </div>
        </div>
      <% end %>
      <div class="w-full text-center mt-4">
      <%= form.submit "Add", class:'flex  justify-center h-26 w-32 mx-auto sm:h-26 sm:w-32  border-2 border-gray-400 dark:border-gray-700 font-semibold text-black dark:text-black rounded-xl  hover:bg-pink-200  my-6 py-2' %>
      </div>
    <% end %>
  </div>
</div>
