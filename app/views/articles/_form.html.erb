<div class="flex items-center justify-center h-screen mt-0">
  <div class="max-w-lg containerr">
    <h1 class="text-center text-3xl font-bold">Add Article</h1>
    <div class="flex items-center justify-center flex-wrap gap-4">
      <%= form_with model: article, local: true do |form| %>
        <div class="mb-6">
          <%= form.label :title, class: 'text-sm font-medium text-gray-700 block mb-2' %>
          <%= form.text_field :title, class: 'w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
          <% article.errors.full_messages_for(:title).each do |message| %>
            <div class="text-red-500 text-sm"><%= message %></div>
          <% end %>
        </div>
        <div class="mb-6">
          <%= form.label :body, class: 'text-sm font-medium text-gray-700 block mb-2' %>
          <%= form.text_area :body, class: 'w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500' %>
          <% article.errors.full_messages_for(:body).each do |message| %>
            <div class="text-red-500 text-sm"><%= message %></div>
          <% end %>
        </div>
        <div class="mb-6">
          <%= form.label :image, class: 'block text-gray-700 font-bold mb-2' %>
          <%= form.file_field :image, class: 'py-3 p-5 rounded-md bg-zinc-50 md:w-[500px] w-[300px]' %>
        </div>
        <div class="mb-6">
          <%= form.label :status, class: 'block text-gray-700 font-bold mb-2' %>
          <%= form.select :status, Visible::VALID_STATUSES, { selected: article.status || 'public' }, class: 'py-3 p-5 rounded-md bg-zinc-50 md:w-[500px] w-[300px]' %>
        </div>
          <div class="actions mb-4 mt-8 gap-2 flex justify-center ">
      <%= form.submit "Add", class:'flex  justify-center h-26 w-32 mx-auto sm:h-26 sm:w-32  border-2 border-gray-400 dark:border-gray-700 font-semibold text-black dark:text-black rounded-xl  hover:bg-pink-200  my-6 py-2' %>
  </div>
      <% end %>
    </div>
  </div>
</div>
<style>
.containerr {
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 10px;
  padding: 70px;
}
</style>