
  <div class="flex items-center justify-center h-screen">
    <div class="w-full max-w-md bg-transparent">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="flex items-center justify-center flex-wrap gap-4">
          <div class="shrink-0 flex flex-wrap justify-center">
            <img id="preview_img" class="h-20 w-20 object-cover rounded-full" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR6BV1q7k_XpjtppG39_LfAniwQ5_ZGWrMT6pApmppjwKQgCyxPTTQYYC_3NcrxuiAzFaA&usqp=CAU" alt="Current profile photo" />
          </div>
          <label class="block">
            <span class="sr-only">Choose profile photo</span>
            <%= f.file_field :image, onchange: "loadFile(event)", class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-rose-400 hover:file:bg-violet-100" %>
          </label>
          </div>
          <div class="mb-6">
            <%= f.label :first_name, "First Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <div class="mb-6">
            <%= f.label :last_name, "Last Name", class:"block mb-2 text-sm font-medium text-gray-700" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "name", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <div class="mb-6">
            <%= f.label :email, class:"text-sm font-medium text-gray-700 block mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <div class="mb-6">
            <%= f.label :password, class:"text-sm font-medium text-gray-700 block mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-gray-500 mb-1"><em>(<%= @minimum_password_length %> characters minimum)</em></p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <div class="mb-6">
            <%= f.label :password_confirmation, class:"text-sm font-medium text-gray-700 block mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full px-3 py-2 rounded-md border border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
          <div class="flex justify-center">
            <%= f.submit "Sign up", class:"inline-flex items-center px-4 py-2 bg-rose-400 text-white rounded-md hover:bg-indigo-700 font-medium" %>
          </div>
        <% end %>
        <div class="mt-4 text-center">
          Already have an account? <%= link_to "Log in", new_user_session_path, class:"text-indigo-500 hover:text-indigo-700" %>
        </div>
    </div>
  </div>

<style>
    .bg-transparent {
    background-color: rgba(255, 255, 255, 0.5);
    border-radius: 10px;
    padding: 20px;
  }
</style>

<script>
  var loadFile = function(event) {
    var reader = new FileReader();
    reader.onload = function(){
      var output = document.getElementById('preview_img');
      output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  };
</script>